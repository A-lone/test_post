                </div>
                <div class="row js-header-form-box">
                    <div class="col-xs-10 col-sm-5">
                        <div class="form-group">
                            <input type="text" value="" placeholder="name" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-10 col-sm-6">
                        <div class="form-group">
                            <input type="text" value="" placeholder="value" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-1 js-del-header-box">
                        <span class="fui-cross"></span>
                    </div>
                </div>
            </div>
            <div class="row row_box">
                <div class="col-xs-8">请求参数</div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <textarea  value="" placeholder="param" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <script src="js/vendor/jquery.min.js"></script>
