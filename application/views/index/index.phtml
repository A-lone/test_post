    <body>
        <div class="container col-xs-12 col-md-6 col-md-offset-3">
            <div class="row navbar navbar-inverse navbar-embossed" role="navigation">
                    <div class="col-xs-4 col-sm-2">
                        <span class="navbar-header navbar-brand">Test</span>
                    </div>
                    <div class="col-xs-6 dropdown navbar-brand js-method-choose">
                        <a class="dropdown-toggle" data-toggle="dropdown">POST<b class="caret"></b></a>
                        <span class="dropdown-arrow"></span>
                        <ul class="dropdown-menu">
                            <li><a href="javascript:void(0);">GET</a></li>
